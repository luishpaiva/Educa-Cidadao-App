<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="379dp"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:id="@+id/textViewRecyclerTitulo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="@android:string/untitled"
        android:textAlignment="center"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1" />

    <TextView
        android:id="@+id/textViewRecyclerDescricao"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@android:string/untitled"
        android:textAlignment="center"
        android:textStyle="italic" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="4dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textViewInicio"
            android:layout_width="126dp"
            android:layout_height="wrap_content"
            android:text="@string/inicio"
            android:textAlignment="center"
            android:textColor="@color/design_default_color_secondary_variant"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textViewTermino"
            android:layout_width="127dp"
            android:layout_height="wrap_content"
            android:text="@string/termino"
            android:textAlignment="center"
            android:textColor="@android:color/holo_red_light"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textViewHorario"
            android:layout_width="126dp"
            android:layout_height="wrap_content"
            android:text="@string/horario"
            android:textAlignment="center"
            android:textColor="@color/design_default_color_primary_dark"
            android:textStyle="bold" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textViewRecyclerInicio"
            android:layout_width="126dp"
            android:layout_height="wrap_content"
            android:text="@android:string/untitled"
            android:textAlignment="center"
            android:textColor="@color/design_default_color_secondary_variant"
            tools:ignore="TextContrastCheck" />

        <TextView
            android:id="@+id/textViewRecyclerTermino"
            android:layout_width="127dp"
            android:layout_height="wrap_content"
            android:text="@android:string/untitled"
            android:textAlignment="center"
            android:textColor="@android:color/holo_red_light"
            tools:ignore="TextContrastCheck" />

        <TextView
            android:id="@+id/textViewRecyclerHorario"
            android:layout_width="126dp"
            android:layout_height="wrap_content"
            android:text="@android:string/untitled"
            android:textAlignment="center"
            android:textColor="@color/design_default_color_primary_dark" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="4dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textViewInstrutor"
            android:layout_width="126dp"
            android:layout_height="wrap_content"
            android:text="@string/instrutor"
            android:textAlignment="center"
            android:textStyle="bold"
            tools:ignore="TextSizeCheck" />

        <TextView
            android:id="@+id/textViewCondicao"
            android:layout_width="127dp"
            android:layout_height="wrap_content"
            android:text="@string/condicao"
            android:textAlignment="center"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textViewValor"
            android:layout_width="126dp"
            android:layout_height="wrap_content"
            android:text="@string/valor"
            android:textAlignment="center"
            android:textStyle="bold"
            tools:ignore="TextSizeCheck" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textViewRecyclerInstrutor"
            android:layout_width="126dp"
            android:layout_height="wrap_content"
            android:text="@android:string/untitled"
            android:textAlignment="center" />

        <TextView
            android:id="@+id/textViewRecyclerCondicao"
            android:layout_width="127dp"
            android:layout_height="wrap_content"
            android:text="@android:string/untitled"
            android:textAlignment="center" />

        <TextView
            android:id="@+id/textViewRecyclerValor"
            android:layout_width="126dp"
            android:layout_height="wrap_content"
            android:text="@android:string/untitled"
            android:textAlignment="center" />
    </LinearLayout>

</LinearLayout>